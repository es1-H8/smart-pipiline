# Smart Contract CI/CD Pipeline Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK RPC URLs
# =============================================================================

# Goerli Testnet (Ethereum)
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Sepolia Testnet (Ethereum)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Mainnet (Ethereum) - Use with caution!
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Alternative RPC providers
# GOERLI_RPC_URL=https://eth-goerli.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Private key for deployment (keep this secret!)
# Generate a new wallet for testing, never use your main wallet
PRIVATE_KEY=your_wallet_private_key_here

# =============================================================================
# API KEYS
# =============================================================================

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# CoinMarketCap API key for gas price reporting (optional)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# =============================================================================
# GAS AND PERFORMANCE
# =============================================================================

# Enable gas reporting
REPORT_GAS=true

# Gas price in wei (optional, will use network default if not set)
# GAS_PRICE=20000000000

# Gas limit for transactions (optional)
# GAS_LIMIT=8000000

# =============================================================================
# SECURITY AND TESTING
# =============================================================================

# Enable coverage reporting
COVERAGE=true

# Enable contract size checking
CONTRACT_SIZE=true

# Enable gas optimization
GAS_OPTIMIZATION=true

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Contract verification delay (seconds)
VERIFICATION_DELAY=10

# Enable automatic deployment
AUTO_DEPLOY=true

# Enable automatic verification
AUTO_VERIFY=true

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================

# Enable deployment notifications
DEPLOYMENT_NOTIFICATIONS=true

# Webhook URL for notifications (optional)
WEBHOOK_URL=your_webhook_url_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug logging
DEBUG=true

# Enable verbose output
VERBOSE=true

# Test network selection
TEST_NETWORK=goerli

# =============================================================================
# CI/CD SPECIFIC
# =============================================================================

# GitHub Actions specific variables
GITHUB_ACTIONS=true

# Enable artifact upload
UPLOAD_ARTIFACTS=true

# Enable SARIF reporting
SARIF_REPORTING=true

# =============================================================================
# NOTES AND WARNINGS
# =============================================================================

# ‚ö†Ô∏è  IMPORTANT SECURITY NOTES:
# 1. Never commit your .env file to version control
# 2. Never share your private keys
# 3. Use test wallets for development
# 4. Keep your API keys secure
# 5. Regularly rotate your keys

