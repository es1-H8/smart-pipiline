{
  "name": "smart-contract-cicd-pipeline",
  "version": "1.0.0",
  "description": "Complete CI/CD pipeline for smart contract development with automated testing and security analysis",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "verify:goerli": "hardhat verify --network goerli",
    "verify:sepolia": "hardhat verify --network sepolia",
    "slither": "slither . --print human-summary",
    "slither:sarif": "slither . --sarif slither.sarif",
    "echidna": "echidna-test contracts --contract SampleToken --config echidna.yml",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "coverage": "hardhat coverage",
    "size": "hardhat size-contracts"
  },
  "keywords": [
    "smart-contracts",
    "ethereum",
    "solidity",
    "hardhat",
    "ci-cd",
    "security",
    "testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "hardhat": "^2.19.0",
    "hardhat-deploy": "^0.12.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "solhint": "^4.0.0",
    "chai": "^4.3.7",
    "ethers": "^6.8.1"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
} 